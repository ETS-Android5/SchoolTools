<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lblTimeTableAssistantTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/timetable_assistant_step1"
        android:layout_alignParentTop="true"/>



    <TableLayout
        android:id="@+id/tblTimeTableAssistant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblTimeTableAssistantTitle"
        android:layout_margin="2dp"
        android:weightSum="10">

        <TableRow
            android:tag="step1">
            <EditText
                android:id="@+id/txtTimeTableAssistantTimeTableTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:inputType="text"
                android:hint="@string/sys_title"/>
        </TableRow>

        <TableRow
            android:tag="step1">
            <EditText
                android:id="@+id/txtTimeTableAssistantTimeTableYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:inputType="text"
                android:hint="@string/timetable_year"/>
        </TableRow>

        <TableRow
            android:tag="step2">
            <TimePicker
                android:id="@+id/tpTimeTableAssistantTimesStart"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="100dp"/>
            <TimePicker
                android:id="@+id/tpTimeTableAssistantTimesEnd"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="100dp"/>
        </TableRow>

        <TableRow
            android:tag="step2">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/cmdTimeTableAssistantTimesBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:contentDescription="@string/learningCard_assistant_back" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/cmdTimeTableAssistantTimesForward"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                android:contentDescription="@string/learningCard_assistant_forward" />
        </TableRow>

        <TableRow
            android:tag="step3">
            <EditText
                android:id="@+id/txtTimeTableAssistantSubjectTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/sys_title"
                android:layout_weight="8"/>
            <EditText
                android:id="@+id/txtTimeTableAssistantSubjectAlias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/timetable_subject_alias"
                android:layout_weight="2"/>
        </TableRow>

        <TableRow
            android:tag="step3">
            <Spinner
                android:id="@+id/txtTimeTableAssistantSubjectColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="@string/timetable_color"/>
        </TableRow>

        <TableRow
            android:tag="step3">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/cmdTimeTableAssistantSubjectBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:contentDescription="@string/learningCard_assistant_back" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/cmdTimeTableAssistantSujectForward"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                android:contentDescription="@string/learningCard_assistant_forward" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/timeTableAssistantControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:layout_below="@+id/tblTimeTableAssistant">
        <TextView
            android:id="@+id/border"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"/>

        <LinearLayout
            android:id="@+id/arrows"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:weightSum="10"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/cmdTimeTableAssistantBack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp"
                android:contentDescription="@string/learningCard_assistant_back" />
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/cmdTimeTableAssistantForward"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                app:srcCompat="@drawable/ic_arrow_forward_black_24dp"
                android:contentDescription="@string/learningCard_assistant_forward" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/cmdTimeTableAssistantSave"
            app:srcCompat="@android:drawable/ic_menu_save"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
    </LinearLayout>
</RelativeLayout>