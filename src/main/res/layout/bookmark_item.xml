<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/listview_background"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:weightSum="10">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivBookmarkPreview"
        app:srcCompat="@drawable/ic_bookmark_black_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="1dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <LinearLayout
            android:background="@drawable/listview_background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:weightSum="10">

            <TextView
                android:id="@+id/lblBookmarkTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="12sp"
                android:gravity="center|start"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:background="@color/Gray"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:background="@drawable/listview_background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:weightSum="10">

            <TextView
                android:text="@string/bookmark_tags"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lblBookmarkTags"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/listview_background"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:weightSum="10">

            <TextView
                android:text="@string/timetable_lesson"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lblBookmarkSubject"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>