<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.domjos.schooltools.widgets.TimeTableWidgetConfigurationActivity"
    android:orientation="vertical"
    android:background="@drawable/bg_ice">

    <TextView
        android:text="@string/main_nav_timetable"
        android:id="@+id/lblHeader"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"/>
    <Spinner
        android:id="@+id/cmbTimeTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblHeader"/>

    <Button
        android:text="@string/sys_save"
        android:id="@+id/cmdSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
